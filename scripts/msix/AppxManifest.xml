<?xml version="1.0" encoding="utf-8"?>
<Package xmlns="http://schemas.microsoft.com/appx/manifest/foundation/windows10"
         xmlns:uap="http://schemas.microsoft.com/appx/manifest/uap/windows10"
         xmlns:rescap="http://schemas.microsoft.com/appx/manifest/foundation/windows10/restrictedcapabilities">

  <Identity Name="CrossMacro.CrossMacro"
            Publisher="CN=FE9E81DC-2233-4DB9-B5D4-E11AFD6462CF"
            Version="0.9.0.0"
            ProcessorArchitecture="x64"/>

  <Properties>
    <DisplayName>CrossMacro</DisplayName>
    <PublisherDisplayName>CrossMacro</PublisherDisplayName>
    <Logo>Assets\StoreLogo.png</Logo>
    <Description>Cross-platform mouse and keyboard macro automation tool with text expansion support.</Description>
  </Properties>

  <Resources>
    <Resource Language="en-us"/>
  </Resources>

  <Dependencies>
    <TargetDeviceFamily Name="Windows.Desktop" MinVersion="10.0.17763.0" MaxVersionTested="10.0.26100.0"/>
  </Dependencies>

  <Applications>
    <Application Id="CrossMacro"
                 Executable="CrossMacro.UI.exe"
                 EntryPoint="Windows.FullTrustApplication">
      <uap:VisualElements
        DisplayName="CrossMacro"
        Description="Cross-platform mouse and keyboard macro automation tool with text expansion support."
        Square150x150Logo="Assets\Square150x150Logo.png"
        Square44x44Logo="Assets\Square44x44Logo.png"
        BackgroundColor="transparent">
        <uap:DefaultTile Wide310x150Logo="Assets\Wide310x150Logo.png"/>
      </uap:VisualElements>
    </Application>
  </Applications>

  <Capabilities>
    <rescap:Capability Name="runFullTrust"/>
  </Capabilities>
</Package>
