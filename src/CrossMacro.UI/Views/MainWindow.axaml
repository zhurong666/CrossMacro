<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:CrossMacro.UI.ViewModels"
        xmlns:tabs="using:CrossMacro.UI.Views.Tabs"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="500"
        x:Class="CrossMacro.UI.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/mouse-icon.png"
        Title="CrossMacro"
        Width="600" Height="540"
        MinWidth="600" MinHeight="540"
        Background="#0F172A"
        TransparencyLevelHint="AcrylicBlur"
        ExtendClientAreaToDecorationsHint="True"
        SystemDecorations="None"
        CanResize="False">

    <Design.DataContext>
        <vm:DesignMainWindowViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*,Auto" Margin="0">
        
        <!-- Warning Banner -->
        <Border Grid.Row="0" 
                Background="#F59E0B" 
                Padding="12,8"
                IsVisible="{Binding HasExtensionWarning}">
            <Grid ColumnDefinitions="Auto,*,Auto">
                <TextBlock Grid.Column="0" Text="âš ï¸" Margin="0,0,8,0" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="1" 
                          Text="{Binding ExtensionWarning}" 
                          Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"
                          FontWeight="Bold"
                          TextWrapping="Wrap"
                          VerticalAlignment="Center"/>
            </Grid>
        </Border>
        
        <!-- Main Content Tabs -->
        <TabControl Grid.Row="1" Margin="10" Padding="0">
            
            <!-- Recording Tab -->
            <TabItem Header="â—‰ Recording" FontSize="14">
                <tabs:RecordingTabView DataContext="{Binding Recording}"/>
            </TabItem>

            <!-- Playback Tab -->
            <TabItem Header="â–¶ï¸ Playback" FontSize="14">
                <tabs:PlaybackTabView DataContext="{Binding Playback}"/>
            </TabItem>

            <!-- Files Tab -->
            <TabItem Header="ðŸ’¾ Files" FontSize="14">
                <tabs:FilesTabView DataContext="{Binding Files}"/>
            </TabItem>
            
            <!-- Text Expansion Tab -->
            <TabItem Header="ðŸ“ Text Expansion" FontSize="14">
                <tabs:TextExpansionTabView DataContext="{Binding TextExpansion}"/>
            </TabItem>
            
            <!-- Settings Tab -->
            <TabItem Header="âš™ï¸ Settings" FontSize="14">
                <tabs:SettingsTabView DataContext="{Binding Settings}"/>
            </TabItem>
            
        </TabControl>

        <!-- Title Bar / Status Bar -->
        <Border Grid.Row="2"
               Background="#1E293B"
               Padding="12,8"
               BorderBrush="#334155"
               BorderThickness="0,1,0,0">
            <Grid ColumnDefinitions="Auto,*,Auto">
                <TextBlock Grid.Column="0"
                          FontSize="12"
                          FontWeight="Bold"
                          Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"
                          VerticalAlignment="Center">
                    <Run Text="ðŸ–±ï¸ CrossMacro "/><Run Text="{Binding AppVersion}"/>
                </TextBlock>
                <TextBlock Grid.Column="2"
                          Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                          FontSize="11"
                          Text="{Binding GlobalStatus}"
                          HorizontalAlignment="Right"
                          VerticalAlignment="Center"/>
            </Grid>
        </Border>


        <!-- Update Notification Popup -->
        <Border Grid.Row="1"
                Background="#1E293B"
                BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Padding="12"
                Margin="20"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                IsVisible="{Binding IsUpdateNotificationVisible}"
                BoxShadow="0 4 12 4 #40000000">
            <Border.Transitions>
                <Transitions>
                    <DoubleTransition Property="Opacity" Duration="0:0:0.3"/>
                    <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.3" Easing="CubicEaseOut"/>
                </Transitions>
            </Border.Transitions>
            
            <StackPanel Spacing="8" Width="240">
                <Grid ColumnDefinitions="*,Auto">
                    <StackPanel Spacing="2">
                        <TextBlock Text="Update Available" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding LatestVersion, StringFormat='v{0} is available'}" 
                                  FontSize="12" 
                                  Foreground="#94A3B8"/>
                    </StackPanel>
                    
                    <Button Grid.Column="1" 
                            Command="{Binding DismissUpdateNotification}"
                            Background="Transparent"
                            Padding="4"
                            VerticalAlignment="Top"
                            Margin="8,-4,-4,0">
                        <TextBlock Text="âœ•" FontSize="11" Foreground="#64748B"/>
                    </Button>
                </Grid>
                
                <Button Command="{Binding OpenUpdateUrl}"
                        HorizontalAlignment="Stretch"
                        Background="{DynamicResource SystemAccentColor}"
                        Foreground="White"
                        CornerRadius="4"
                        Padding="6">
                    <TextBlock Text="View on GitHub" 
                              HorizontalAlignment="Center" 
                              FontSize="12"
                              FontWeight="SemiBold"/>
                </Button>
            </StackPanel>
        </Border>

        <!-- Drag Handle -->
        <Border Grid.Row="0"
                Background="Transparent"
                IsVisible="{Binding IsCloseButtonVisible}"
                PointerPressed="OnTitleBarPointerPressed"/>

        <!-- Window Control Buttons -->
        <StackPanel Grid.Row="0"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="10"
                    Spacing="8"
                    IsVisible="{Binding IsCloseButtonVisible}">
            
            <!-- Minimize Button -->
            <Button Width="24"
                    Height="24"
                    Background="Transparent"
                    Foreground="#94A3B8"
                    Padding="0"
                    Click="OnMinimizeWindow"
                    Cursor="Hand"
                    ToolTip.Tip="Minimize">
                <Button.Styles>
                    <Style Selector="Button:pointerover /template/ ContentPresenter">
                        <Setter Property="Background" Value="Transparent"/>
                    </Style>
                    <Style Selector="Button:pointerover">
                        <Setter Property="Foreground" Value="White"/>
                    </Style>
                </Button.Styles>
                <TextBlock Text="â”€" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center" 
                           FontWeight="Bold"
                           FontSize="14"/>
            </Button>
            
            <!-- Close Button -->
            <Button Width="24"
                    Height="24"
                    Background="Transparent"
                    Foreground="#94A3B8"
                    Padding="0"
                    Click="OnCloseApp"
                    Cursor="Hand"
                    ToolTip.Tip="Close Application">
                <Button.Styles>
                    <Style Selector="Button:pointerover /template/ ContentPresenter">
                        <Setter Property="Background" Value="#EF4444"/>
                    </Style>
                    <Style Selector="Button:pointerover">
                        <Setter Property="Foreground" Value="White"/>
                    </Style>
                </Button.Styles>
                <TextBlock Text="âœ•" 
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center" 
                           FontWeight="Bold"
                           FontSize="14"/>
            </Button>
        </StackPanel>

    </Grid>

</Window>
