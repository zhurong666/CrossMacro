<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:CrossMacro.UI.ViewModels"
             xmlns:controls="using:CrossMacro.UI.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="550" d:DesignHeight="400"
             x:Class="CrossMacro.UI.Views.Tabs.SettingsTabView"
             x:DataType="vm:SettingsViewModel">

    <Panel>
        <ScrollViewer Padding="10" 
                      VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="20">

                <!-- Hotkey Info -->
                <Border Background="#1E293B" CornerRadius="8" Padding="12">
                    <StackPanel Spacing="12">
                        <TextBlock Text="Global Hotkeys" FontWeight="Bold" Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
                        
                        <Grid ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto" Margin="0,4,0,0">
                            <controls:HotkeyCapture Grid.Row="0" Grid.Column="0" 
                                                   x:Name="RecordingHotkeyCapture"
                                                   Hotkey="{Binding RecordingHotkey, Mode=TwoWay}" 
                                                   Margin="0,0,12,8"
                                                   MinWidth="140"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="Toggle Recording (Start/Stop)" VerticalAlignment="Center" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                            
                            <controls:HotkeyCapture Grid.Row="1" Grid.Column="0" 
                                                   x:Name="PlaybackHotkeyCapture"
                                                   Hotkey="{Binding PlaybackHotkey, Mode=TwoWay}" 
                                                   Margin="0,0,12,8"
                                                   MinWidth="140"/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="Toggle Playback (Start/Stop)" VerticalAlignment="Center" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                            
                            <controls:HotkeyCapture Grid.Row="2" Grid.Column="0" 
                                                   x:Name="PauseHotkeyCapture"
                                                   Hotkey="{Binding PauseHotkey, Mode=TwoWay}" 
                                                   Margin="0,0,12,0"
                                                   MinWidth="140"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="Pause/Resume Playback" VerticalAlignment="Center" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                        </Grid>
                    </StackPanel>
                </Border>
                
                <!-- Tray Icon Settings -->
                <Border Background="#1E293B" CornerRadius="8" Padding="12">
                    <StackPanel Spacing="16">
                        <!-- Tray Icon -->
                        <Grid ColumnDefinitions="*,Auto">
                            <TextBlock Grid.Column="0" 
                                      Text="Enable Tray Icon" 
                                      FontWeight="Medium" 
                                      Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"
                                      VerticalAlignment="Center"/>
                                      
                            <ToggleSwitch Grid.Column="1" 
                                         IsChecked="{Binding EnableTrayIcon}"
                                         OnContent="" 
                                         OffContent=""
                                         VerticalAlignment="Center"/>
                        </Grid>
                        
                        <!-- Text Expansion -->
                        <Grid ColumnDefinitions="*,Auto">
                            <TextBlock Grid.Column="0" 
                                      Text="Enable Text Expansion" 
                                      FontWeight="Medium" 
                                      Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"
                                      VerticalAlignment="Center"/>
                                      
                            <ToggleSwitch Grid.Column="1" 
                                         IsChecked="{Binding EnableTextExpansion}"
                                         OnContent="" 
                                         OffContent=""
                                         VerticalAlignment="Center"/>
                        </Grid>
                        
                        <!-- Update Check -->
                        <Grid ColumnDefinitions="*,Auto">
                            <TextBlock Grid.Column="0" 
                                      Text="Check for Updates at Startup" 
                                      FontWeight="Medium" 
                                      Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"
                                      VerticalAlignment="Center"/>
                                      
                            <ToggleSwitch Grid.Column="1" 
                                         IsChecked="{Binding CheckForUpdates}"
                                         OnContent="" 
                                         OffContent=""
                                         VerticalAlignment="Center"/>
                        </Grid>
                    </StackPanel>
                </Border>


                <!-- Support Section -->
                <Border Background="#1E293B" CornerRadius="8" Padding="12">
                    <Grid ColumnDefinitions="*,Auto">
                        <StackPanel Grid.Column="0" Spacing="4">
                            <TextBlock Text="Support CrossMacro" 
                                      FontWeight="Bold" 
                                      Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"/>
                            <TextBlock Text="If you like this project, please consider giving it a star on GitHub!" 
                                      FontSize="12"
                                      Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                        </StackPanel>
                        
                        <Button Grid.Column="1" 
                                Command="{Binding OpenGitHub}"
                                Classes="accent"
                                VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <PathIcon Data="M12 .297c-6.63 0-12 5.373-12 12 0 5.303 3.438 9.8 8.205 11.385.6.113.82-.258.82-.577 0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.61-4.042-1.61C4.422 18.07 3.633 17.7 3.633 17.7c-1.087-.744.084-.729.084-.729 1.205.084 1.838 1.236 1.838 1.236 1.07 1.835 2.809 1.305 3.495.998.108-.776.417-1.305.76-1.605-2.665-.3-5.466-1.332-5.466-5.93 0-1.31.465-2.38 1.235-3.22-.135-.303-.54-1.523.105-3.176 0 0 1.005-.322 3.3 1.23.96-.267 1.98-.399 3-.405 1.02.006 2.04.138 3 .405 2.28-1.552 3.285-1.23 3.285-1.23.645 1.653.24 2.873.12 3.176.765.84 1.23 1.91 1.23 3.22 0 4.61-2.805 5.625-5.475 5.92.42.36.81 1.096.81 2.22 0 1.606-.015 2.896-.015 3.286 0 .315.21.69.825.57C20.565 22.092 24 17.592 24 12.297c0-6.627-5.373-12-12-12"
                                          Foreground="White"
                                          Width="16" Height="16"/>
                                <TextBlock Text="Star on GitHub" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                </Border>
                
                <!-- Bottom Spacer to ensure scrolling works fully -->
                <Rectangle Height="40" Fill="Transparent"/>
            </StackPanel>
        </ScrollViewer>
        
        <!-- Toast Notification -->
        <Border x:Name="ToastNotification"
                Background="#DC2626"
                CornerRadius="8"
                Padding="16,12"
                Margin="16"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                IsVisible="False"
                BoxShadow="0 4 12 2 #40000000">
            <Border.Transitions>
                <Transitions>
                    <DoubleTransition Property="Opacity" Duration="0:0:0.3"/>
                </Transitions>
            </Border.Transitions>
            
            <StackPanel Spacing="4" MaxWidth="300">
                <TextBlock x:Name="ToastTitle"
                           Text="Hotkey Already Assigned"
                           FontWeight="Bold"
                           FontSize="13"
                           Foreground="White"/>
                <TextBlock x:Name="ToastMessage"
                           Text=""
                           FontSize="12"
                           Foreground="#FEE2E2"
                           TextWrapping="Wrap"/>
            </StackPanel>
        </Border>
    </Panel>

</UserControl>
