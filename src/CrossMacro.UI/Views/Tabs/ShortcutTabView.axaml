<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:CrossMacro.UI.ViewModels"
             xmlns:controls="using:CrossMacro.UI.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="700"
             x:Class="CrossMacro.UI.Views.Tabs.ShortcutTabView"
             x:DataType="vm:ShortcutViewModel">

    <ScrollViewer Padding="10">
        <StackPanel Spacing="16" Margin="0,0,0,50">
            
            <!-- Shortcut List Section -->
            <Border Background="#1E293B" CornerRadius="12" Padding="16"
                    x:Name="ShortcutListBorder">
                <StackPanel Spacing="12">
                    <Grid ColumnDefinitions="*,Auto,Auto">
                        <TextBlock Grid.Column="0"
                                  Text="SHORTCUTS" 
                                  FontWeight="SemiBold" 
                                  Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}" 
                                  FontSize="12"
                                  VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="1"
                                  Text="{Binding Tasks.Count, StringFormat='{}{0} items', FallbackValue='0 items'}"
                                  VerticalAlignment="Center"
                                  Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                  FontSize="12"
                                  Margin="0,0,12,0"/>
                        <Button Grid.Column="2" 
                               Command="{Binding AddTaskCommand}"
                               Background="#334155"
                               CornerRadius="6"
                               Padding="8,4"
                               Cursor="Hand">
                            <TextBlock Text="+" FontSize="18" FontWeight="Bold" Foreground="{DynamicResource SystemAccentColor}"/>
                        </Button>
                    </Grid>
                    
                    <ItemsControl ItemsSource="{Binding Tasks}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="10,8" 
                                        CornerRadius="8" 
                                        Margin="0,2"
                                        Background="#0F172A">
                                    <Border.Styles>
                                        <Style Selector="Border:pointerover">
                                            <Setter Property="Background" Value="#1A2744"/>
                                        </Style>
                                    </Border.Styles>
                                    <Grid ColumnDefinitions="*,Auto,Auto,Auto">
                                        <!-- Shortcut Info (clickable area for selection) -->
                                        <Button Grid.Column="0" 
                                                Background="Transparent"
                                                Padding="0"
                                                HorizontalAlignment="Stretch"
                                                HorizontalContentAlignment="Left"
                                                Command="{Binding #ShortcutListBorder.((vm:ShortcutViewModel)DataContext).SelectTaskCommand}"
                                                CommandParameter="{Binding}"
                                                Cursor="Hand">
                                            <Button.Styles>
                                                <Style Selector="Button:pointerover /template/ ContentPresenter">
                                                    <Setter Property="Background" Value="Transparent"/>
                                                </Style>
                                            </Button.Styles>
                                            <StackPanel VerticalAlignment="Center" Margin="0,0,8,0">
                                                <TextBlock Text="{Binding Name, FallbackValue='Shortcut Name'}" 
                                                          FontWeight="Medium"
                                                          FontSize="13"
                                                          TextTrimming="CharacterEllipsis"/>
                                                <StackPanel Orientation="Horizontal" Spacing="8">
                                                    <Border Background="#334155" 
                                                            CornerRadius="4" 
                                                            Padding="6,2"
                                                            IsVisible="{Binding HotkeyString, Converter={x:Static StringConverters.IsNotNullOrEmpty}, FallbackValue=False}">
                                                        <TextBlock Text="{Binding HotkeyString, FallbackValue=''}" 
                                                                   FontSize="11" 
                                                                   FontFamily="Consolas, monospace"
                                                                   Foreground="{DynamicResource SystemAccentColor}"/>
                                                    </Border>
                                                    <TextBlock Text="{Binding MacroFilePath, TargetNullValue='No file', FallbackValue='No file'}"
                                                               FontSize="11" 
                                                               Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                                                               TextTrimming="CharacterEllipsis"
                                                               MaxWidth="200"/>
                                                </StackPanel>
                                            </StackPanel>
                                        </Button>
                                        
                                        <!-- Toggle Switch -->
                                        <ToggleSwitch Grid.Column="1" 
                                                     IsChecked="{Binding IsEnabled}"
                                                     IsEnabled="{Binding CanBeEnabled}"
                                                     OnContent="" OffContent=""
                                                     VerticalAlignment="Center"
                                                     Margin="0,0,4,0"/>
                                        
                                        <!-- Edit Button -->
                                        <Button Grid.Column="2"
                                                Background="Transparent"
                                                Padding="6"
                                                Command="{Binding #ShortcutListBorder.((vm:ShortcutViewModel)DataContext).SelectTaskCommand}"
                                                CommandParameter="{Binding}"
                                                Cursor="Hand"
                                                ToolTip.Tip="Edit shortcut">
                                            <TextBlock Text="âœï¸" FontSize="12"/>
                                            <Button.Styles>
                                                <Style Selector="Button:pointerover /template/ ContentPresenter">
                                                    <Setter Property="Background" Value="#334155"/>
                                                </Style>
                                            </Button.Styles>
                                        </Button>
                                        
                                        <!-- Delete Button -->
                                        <Button Grid.Column="3"
                                                Background="Transparent"
                                                Padding="6"
                                                Command="{Binding #ShortcutListBorder.((vm:ShortcutViewModel)DataContext).RemoveTaskCommand}"
                                                CommandParameter="{Binding}"
                                                Cursor="Hand"
                                                ToolTip.Tip="Delete shortcut">
                                            <TextBlock Text="ðŸ—‘" FontSize="12" Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                                            <Button.Styles>
                                                <Style Selector="Button:pointerover /template/ ContentPresenter">
                                                    <Setter Property="Background" Value="#334155"/>
                                                </Style>
                                                <Style Selector="Button:pointerover TextBlock">
                                                    <Setter Property="Foreground" Value="#EF4444"/>
                                                </Style>
                                            </Button.Styles>
                                        </Button>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>
            
            <!-- Shortcut Settings Section (visible when shortcut selected) -->
            <Border Background="#1E293B" 
                    CornerRadius="12" 
                    Padding="16"
                    IsVisible="{Binding HasSelectedTask}">
                <StackPanel Spacing="16">
                    <TextBlock Text="SHORTCUT SETTINGS" 
                              FontWeight="SemiBold" 
                              Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}" 
                              FontSize="12"/>
                    
                    <!-- Shortcut Name -->
                    <StackPanel Spacing="4">
                        <TextBlock Text="Name" FontSize="12" Opacity="0.7"/>
                        <TextBox Text="{Binding SelectedTask.Name, Mode=TwoWay, FallbackValue=''}" 
                                Watermark="Shortcut name"/>
                    </StackPanel>
                    
                    <!-- Hotkey Capture -->
                    <StackPanel Spacing="4">
                        <TextBlock Text="Trigger (Keyboard/Mouse)" FontSize="12" Opacity="0.7"/>
                        <controls:HotkeyCapture x:Name="HotkeyInput"
                                               Hotkey="{Binding SelectedHotkeyString, Mode=TwoWay, FallbackValue=''}"
                                               HotkeyChanged="OnHotkeyChanged"/>
                    </StackPanel>
                    
                    <!-- Playback Speed -->
                    <StackPanel Spacing="8">
                        <Grid ColumnDefinitions="*,Auto">
                            <TextBlock Grid.Column="0" Classes="label" Text="Playback Speed"/>
                            <TextBlock Grid.Column="1" 
                                      Text="{Binding SelectedTask.PlaybackSpeed, StringFormat='{}{0:0.0}x', FallbackValue='1.0x'}" 
                                      FontWeight="Medium"
                                      FontSize="16"
                                      Foreground="{DynamicResource SystemAccentColor}"/>
                        </Grid>
                        <Slider Value="{Binding SelectedTask.PlaybackSpeed, Mode=TwoWay, FallbackValue=1.0}"
                               Minimum="0.1" 
                               Maximum="10.0" 
                               TickFrequency="0.1"
                               IsSnapToTickEnabled="True"/>
                    </StackPanel>
                    
                    <!-- Macro File -->
                    <StackPanel Spacing="4">
                        <TextBlock Text="Macro File" FontSize="12" Opacity="0.7"/>
                        <Grid ColumnDefinitions="*,Auto">
                            <Border Grid.Column="0" 
                                   Background="#0F172A" 
                                   CornerRadius="6" 
                                   Padding="12,8"
                                   Margin="0,0,8,0">
                                <TextBlock Text="{Binding SelectedMacroFileName, FallbackValue='No file selected'}" 
                                          VerticalAlignment="Center"
                                          TextTrimming="CharacterEllipsis"
                                          ToolTip.Tip="{Binding SelectedMacroFilePath, FallbackValue=''}"/>
                            </Border>
                            <Button Grid.Column="1" 
                                   Content="ðŸ“‚ Browse" 
                                   Command="{Binding BrowseMacroCommand}"/>
                        </Grid>
                    </StackPanel>
                </StackPanel>
            </Border>
            
            <!-- Status Section -->
            <Border Background="#1E293B" 
                   CornerRadius="12" 
                   Padding="16"
                   IsVisible="{Binding HasSelectedTask}">
                <StackPanel Spacing="8">
                    <TextBlock Text="STATUS" 
                              FontWeight="SemiBold" 
                              Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}"
                              FontSize="12"/>
                    <Grid ColumnDefinitions="100,*" RowDefinitions="Auto,Auto" RowSpacing="4">
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Last Triggered:" FontSize="12" Opacity="0.7"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" 
                                  Text="{Binding SelectedTask.LastTriggeredTime, StringFormat='{}{0:G}', TargetNullValue='Never', FallbackValue='Never'}" 
                                  FontSize="12"/>
                        
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Status:" FontSize="12" Opacity="0.7"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" 
                                  Text="{Binding SelectedTask.LastStatus, TargetNullValue='â€”', FallbackValue='â€”'}" 
                                  FontSize="12"/>
                    </Grid>
                </StackPanel>
            </Border>
            
            <!-- Save Button -->
            <Button Content="ðŸ’¾ Save All Shortcuts" 
                   Command="{Binding SaveCommand}"
                   Classes="success"
                   HorizontalAlignment="Right"
                   IsVisible="{Binding HasSelectedTask}"/>
            
            <!-- Empty State -->
            <Border Background="#1E293B" 
                    CornerRadius="12" 
                    Padding="32"
                    IsVisible="{Binding !HasSelectedTask}">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="8">
                    <TextBlock Text="âŒ¨ï¸" FontSize="48" HorizontalAlignment="Center"/>
                    <TextBlock Text="No Shortcut Selected" 
                              FontSize="16" 
                              FontWeight="Medium"
                              HorizontalAlignment="Center"/>
                    <TextBlock Text="Select a shortcut from the list above or add a new one" 
                              FontSize="12" 
                              Opacity="0.6"
                              HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
            
        </StackPanel>
    </ScrollViewer>
</UserControl>
