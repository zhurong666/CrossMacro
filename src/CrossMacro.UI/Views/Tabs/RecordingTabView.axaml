<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:CrossMacro.UI.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="550" d:DesignHeight="400"
             x:Class="CrossMacro.UI.Views.Tabs.RecordingTabView"
             x:DataType="vm:RecordingViewModel">

    <ScrollViewer Padding="10">
        <StackPanel Spacing="20">
            <Grid ColumnDefinitions="2*,1.5*,*" RowDefinitions="Auto,Auto">
                <!-- Labels Row -->
                <TextBlock Grid.Row="0" Grid.Column="0" Classes="label" Text="Status" Margin="0,0,0,8"/>
                <TextBlock Grid.Row="0" Grid.Column="1" Classes="label" Text="Events" Margin="8,0,0,8"/>
                <TextBlock Grid.Row="0" Grid.Column="2" Classes="label" Text="State" Margin="8,0,0,8"/>

                <!-- Status Indicator -->
                <Border Grid.Row="1" Grid.Column="0"
                       Background="#1E293B"
                       CornerRadius="8"
                       Padding="12,8"
                       ClipToBounds="True"
                       VerticalAlignment="Stretch">
                    <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                        <Ellipse Width="12" Height="12" Fill="{DynamicResource SystemControlForegroundBaseMediumBrush}"/>
                        <TextBlock Text="{Binding RecordingStatus}" 
                                  Foreground="{DynamicResource SystemControlForegroundBaseHighBrush}"
                                  FontWeight="Medium"
                                  TextTrimming="CharacterEllipsis"
                                  ToolTip.Tip="{Binding RecordingStatus}"/>
                    </StackPanel>
                </Border>

                <!-- Event Count -->
                <Border Grid.Row="1" Grid.Column="1"
                       Background="#1E293B"
                       CornerRadius="8"
                       Padding="8,8"
                       Margin="8,0,0,0"
                       ClipToBounds="True"
                       VerticalAlignment="Stretch">
                    <StackPanel Orientation="Horizontal" Spacing="12" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <TextBlock Text="ðŸ–±ï¸" FontSize="14" FontFamily="{StaticResource EmojiFont}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding MouseEventCount}" 
                                      FontWeight="Medium"
                                      FontSize="16"
                                      Foreground="{DynamicResource SystemAccentColor}"
                                      VerticalAlignment="Center"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <TextBlock Text="âŒ¨ï¸" FontSize="14" FontFamily="{StaticResource EmojiFont}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding KeyboardEventCount}" 
                                      FontWeight="Medium"
                                      FontSize="16"
                                      Foreground="{DynamicResource SystemAccentColor}"
                                      VerticalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Quick Stats -->
                <Border Grid.Row="1" Grid.Column="2"
                       Background="#1E293B"
                       CornerRadius="8"
                       Padding="12,8"
                       Margin="8,0,0,0"
                       VerticalAlignment="Stretch">
                    <Panel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <!-- Recording indicator: ðŸ”´ when recording -->
                        <TextBlock Text="ðŸ”´" 
                                  FontSize="24"
                                  FontFamily="{StaticResource EmojiFont}"
                                  IsVisible="{Binding IsRecording}"
                                  ToolTip.Tip="Recording..."/>
                        <!-- Ready indicator: ðŸŸ¢ when not recording -->
                        <TextBlock Text="ðŸŸ¢" 
                                  FontSize="24"
                                  FontFamily="{StaticResource EmojiFont}"
                                  IsVisible="{Binding !IsRecording}"
                                  ToolTip.Tip="Ready"/>
                    </Panel>
                </Border>
            </Grid>

            <!-- Recording Controls Panel -->
            <Border Background="#1E293B" CornerRadius="12" Padding="16">
                <StackPanel Spacing="16">
                    <TextBlock Text="CAPTURE SETTINGS" 
                              FontWeight="SemiBold" 
                              Foreground="{DynamicResource SystemControlForegroundBaseMediumBrush}" 
                              FontSize="12"/>

                    <!-- Toggles -->
                    <Grid ColumnDefinitions="*,*">
                        <Border Grid.Column="0" 
                                Background="#0F172A" 
                                CornerRadius="6" 
                                Padding="12,8" 
                                Margin="0,0,6,0">
                            <Grid ColumnDefinitions="*,Auto">
                                <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                                    <TextBlock Text="ðŸ–±ï¸" FontSize="16" FontFamily="{StaticResource EmojiFont}"/>
                                    <TextBlock Text="Mouse" FontWeight="Medium" VerticalAlignment="Center"/>
                                </StackPanel>
                                <ToggleSwitch Grid.Column="1" 
                                             IsChecked="{Binding IsMouseRecordingEnabled}"
                                             OnContent="" OffContent=""
                                             VerticalAlignment="Center"/>
                            </Grid>
                        </Border>

                        <Border Grid.Column="1" 
                                Background="#0F172A" 
                                CornerRadius="6" 
                                Padding="12,8" 
                                Margin="6,0,0,0">
                            <Grid ColumnDefinitions="*,Auto">
                                <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                                    <TextBlock Text="âŒ¨ï¸" FontSize="16" FontFamily="{StaticResource EmojiFont}"/>
                                    <TextBlock Text="Keyboard" FontWeight="Medium" VerticalAlignment="Center"/>
                                </StackPanel>
                                <ToggleSwitch Grid.Column="1" 
                                             IsChecked="{Binding IsKeyboardRecordingEnabled}"
                                             OnContent="" OffContent=""
                                             VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </Grid>
                    
                    <!-- Coordinate Settings -->
                    <StackPanel Spacing="8">
                        <Border Background="#0F172A" 
                                CornerRadius="6" 
                                Padding="12,8"
                                IsVisible="{Binding IsForceRelativeSupported}">
                            <Grid ColumnDefinitions="*,Auto,Auto">
                                <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                                    <TextBlock Text="ðŸ“" FontSize="16" FontFamily="{StaticResource EmojiFont}"/>
                                    <StackPanel Spacing="2">
                                        <TextBlock Text="Force Relative Coordinates" FontWeight="Medium" VerticalAlignment="Center"/>
                                        <TextBlock Text="Use relative mouse position even if absolute is supported" 
                                                  FontSize="10" 
                                                  Opacity="0.6"/>
                                    </StackPanel>
                                </StackPanel>

                                <!-- Help Tooltip -->
                                <Border Grid.Column="1" 
                                        Margin="0,0,12,0" 
                                        Background="#334155" 
                                        CornerRadius="10" 
                                        Width="20" Height="20"
                                        VerticalAlignment="Center"
                                        ToolTip.Tip="Required to use macros in-game.">
                                    <TextBlock Text="?" 
                                               HorizontalAlignment="Center" 
                                               VerticalAlignment="Center" 
                                               FontSize="12" 
                                               FontWeight="Bold" 
                                               Foreground="#94A3B8"/>
                                </Border>

                                <ToggleSwitch Grid.Column="2" 
                                             IsChecked="{Binding ForceRelativeCoordinates}"
                                             OnContent="" OffContent=""
                                             VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        
                        <!-- Skip 0,0 option - only visible when Force Relative is enabled -->
                        <Border Background="#0F172A" 
                                CornerRadius="6" 
                                Padding="12,8"
                                Margin="24,0,0,0"
                                IsVisible="{Binding ShowSkipZeroZeroOption}">
                            <Grid ColumnDefinitions="*,Auto">
                                <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                                    <TextBlock Text="â†—ï¸" FontSize="16" FontFamily="{StaticResource EmojiFont}"/>
                                    <StackPanel Spacing="2">
                                        <TextBlock Text="Skip Initial 0,0 Position" FontWeight="Medium" VerticalAlignment="Center"/>
                                        <TextBlock Text="Don't move cursor to origin when recording starts" 
                                                  FontSize="10" 
                                                  Opacity="0.6"/>
                                    </StackPanel>
                                </StackPanel>
                                <ToggleSwitch Grid.Column="1" 
                                             IsChecked="{Binding SkipInitialZeroZero}"
                                             OnContent="" OffContent=""
                                             VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </StackPanel>

                    <!-- Action Button (Toggle) -->
                    <Button Name="RecordingToggleButton"
                           Click="OnToggleRecording"
                           IsEnabled="{Binding CanToggleRecording}"
                           HorizontalAlignment="Stretch"
                           HorizontalContentAlignment="Center">
                        <Panel>
                            <StackPanel Orientation="Horizontal" Spacing="8" IsVisible="{Binding !IsRecording}">
                                <TextBlock Text="â–¶ï¸" FontFamily="{StaticResource EmojiFont}"/>
                                <TextBlock Text="Start Recording"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Spacing="8" IsVisible="{Binding IsRecording}">
                                <TextBlock Text="â¹ï¸" FontFamily="{StaticResource EmojiFont}"/>
                                <TextBlock Text="Stop Recording"/>
                            </StackPanel>
                        </Panel>
                        <Button.Styles>
                            <!-- Default: Start Recording (Green) -->
                            <Style Selector="Button#RecordingToggleButton">
                                <Setter Property="Background" Value="#10B981"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Padding" Value="20,12"/>
                                <Setter Property="CornerRadius" Value="10"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="FontSize" Value="16"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="BorderThickness" Value="0"/>
                            </Style>
                            <Style Selector="Button#RecordingToggleButton:pointerover /template/ ContentPresenter">
                                <Setter Property="Background" Value="#34D399"/>
                            </Style>
                            <!-- When Recording: Stop (Red) -->
                            <Style Selector="Button#RecordingToggleButton.recording">
                                <Setter Property="Background" Value="#EF4444"/>
                            </Style>
                            <Style Selector="Button#RecordingToggleButton.recording:pointerover /template/ ContentPresenter">
                                <Setter Property="Background" Value="#F87171"/>
                            </Style>
                        </Button.Styles>
                    </Button>
                </StackPanel>
            </Border>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="4">
                <TextBlock Text="ðŸ’¡" FontSize="12" FontFamily="{StaticResource EmojiFont}" Opacity="0.7"/>
                <TextBlock Text="Tip: Use global hotkeys to control recording while in other apps" Classes="label" FontSize="12" Opacity="0.7"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>

</UserControl>
