<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:CrossMacro.UI.ViewModels"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="550" d:DesignHeight="400"
             x:Class="CrossMacro.UI.Views.Tabs.FilesTabView"
             x:DataType="vm:FilesViewModel">

    <Panel>
        <ScrollViewer Padding="10">
            <StackPanel Spacing="20">
                <!-- Macro Name -->
                <StackPanel Spacing="8">
                    <TextBlock Classes="label" Text="Macro Name"/>
                    <TextBox Text="{Binding MacroName}" Watermark="Enter macro name..."/>
                </StackPanel>
                
                <Button Command="{Binding LoadMacroAsync}"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Center">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="ðŸ“‚" FontFamily="{StaticResource EmojiFont}"/>
                        <TextBlock Text="Load Macro"/>
                    </StackPanel>
                </Button>
    
                <Button Command="{Binding SaveMacroAsync}"
                        IsEnabled="{Binding HasRecordedMacro}"
                        HorizontalAlignment="Stretch"
                        HorizontalContentAlignment="Center">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="ðŸ’¾" FontFamily="{StaticResource EmojiFont}"/>
                        <TextBlock Text="Save Macro"/>
                    </StackPanel>
                </Button>

                <!-- NEW: Bottom Spacer -->
                <Rectangle Height="40" Fill="Transparent"/>

            </StackPanel>
        </ScrollViewer>
    </Panel>

</UserControl>
